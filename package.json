{
	"name": "@picopico/typespec-emitter-php",
	"description": "Typespec emitter for PHP",
	"version": "0.1.0",
	"type": "module",
	"main": "dist/src/index.js",
	"license": "MIT",
	"exports": {
		".": {
			"types": "./dist/src/index.d.ts",
			"default": "./dist/src/index.js"
		},
		"./testing": {
			"types": "./dist/src/testing/index.d.ts",
			"default": "./dist/src/testing/index.js"
		}
	},
	"peerDependencies": {
		"@typespec/compiler": "^1.2.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.2",
		"@types/node": "^24.0.15",
		"@typespec/compiler": "^1.2.1",
		"@vitest/coverage-v8": "^3.2.4",
		"tsup": "^8.5.0",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4"
	},
	"scripts": {
		"build": "tsup",
		"watch": "tsup --watch",
		"test": "vitest run",
		"test:dev": "npm run build && vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"format": "biome check --fix --unsafe",
		"format:check": "biome ci",
		"compile": "tsp compile ."
	},
	"packageManager": "npm@11.4.2+sha512.f90c1ec8b207b625d6edb6693aef23dacb39c38e4217fe8c46a973f119cab392ac0de23fe3f07e583188dae9fd9108b3845ad6f525b598742bd060ebad60bff3"
}
